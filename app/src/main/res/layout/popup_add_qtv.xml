<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="50dp"
    android:background="#ffffff"
    android:layout_width="300dp" android:layout_height="600dp">


    <TextView
        android:textColor="#FF051CE8"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng kí Quản trị viên" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/textView15"
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: " />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textView16"
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textView17"
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã bảo mật:" />
    <Button
        android:layout_marginLeft="40dp"
        android:id="@+id/btDangkiQTV"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView18"
        android:text="Đăng kí"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
    <Button
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/btDangkiQTV"
        android:id="@+id/btHuyDangkiQTV"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView18"
        android:text="Hủy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
<EditText
    android:id="@+id/txtUserAdmin"
    android:layout_marginRight="15dp"
    android:layout_alignParentRight="true"
    android:layout_marginTop="18dp"
    android:layout_below="@+id/textView15"
    android:layout_width="150dp"
    android:layout_height="wrap_content"></EditText>
    <EditText

        android:id="@+id/txtPassAdmin"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/txtUserAdmin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/txtMabaomat"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/txtPassAdmin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"></EditText>
</RelativeLayout>