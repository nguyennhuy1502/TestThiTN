<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyThiSinh">

    <RelativeLayout
        android:background="#A3FFD500"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="200dp">

        <TextView
            android:id="@+id/tdqlts"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:textColor="#051CE8"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Quản lý thí sinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <ListView
            android:background="#ffe6e6"
            android:id="@+id/lstThisinh"
            android:layout_width="match_parent"
            android:layout_height="531dp"
            android:layout_above="@+id/imgDownloadListts"
            android:layout_below="@+id/imgAddts"
            android:layout_marginBottom="0dp"></ListView>

        <ImageView
            android:id="@+id/imgAddts"
            android:layout_marginTop="5sp"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_below="@+id/tdqlts"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            app:srcCompat="@drawable/addts"></ImageView>
    <ImageView
        android:id="@+id/imgDownloadListts"
        android:src="@drawable/download"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="40sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="40sp"
        android:layout_height="40sp"></ImageView>
    <Button
        android:id="@+id/btReturnqlts"
        android:text="Quay lại"
        android:layout_marginLeft="10sp"
        android:layout_below="@+id/lstThisinh"
        android:layout_width="wrap_content"
        android:layout_height="40dp"></Button>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>