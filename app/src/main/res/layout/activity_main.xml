<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A3FFD500"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:layout_below="@+id/textView"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/lable" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="#051CE8"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:text="Đăng nhập thi trắc nghiệm"
            android:textSize="25sp" />

        <TextView

            android:textStyle="bold"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="24dp"
            android:text="Username:"
            android:textSize="20sp"
            android:layout_marginLeft="30dp" />

        <TextView

            android:textStyle="bold"
            android:layout_below="@+id/textView2"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="Password:"
            android:textSize="20sp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Username or Email"
            android:inputType="textPersonName"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUser"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="65dp"
            android:text="Sign in" />

        <Button
            android:id="@+id/btForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="65dp"
            android:layout_toEndOf="@+id/btSign"
            android:layout_toRightOf="@+id/btSign"
            android:text="Forgot Password" />
        <TextView
            android:id="@+id/txtHidden"
            android:layout_marginBottom="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="\@KMT Copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    <androidx.appcompat.widget.SwitchCompat
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txtPass"
            android:id="@+id/swQTV"
        android:layout_width="wrap_content"
        android:layout_height="30dp"></androidx.appcompat.widget.SwitchCompat>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/swQTV"
        android:layout_below="@id/txtPass"
        android:text="Đăng nhập với vai trò quản trị viên?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>