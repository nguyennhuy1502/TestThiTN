<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_toLeftOf="@+id/imgStt"
        android:id="@+id/tvndch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung câu hỏi"
        android:textColor="#0000ff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rdg"
        android:layout_below="@+id/tvndch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/rdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/rdc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/rdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

    </RadioGroup>

    <TextView
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_below="@+id/rdg"
        android:id="@+id/tvdac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đáp án chọn" />
    <ImageView
        android:id="@+id/imgStt"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"></ImageView>
</RelativeLayout>