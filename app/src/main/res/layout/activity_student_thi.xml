<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Thi"
    android:background="#A3FFD500">

    <TextView
        android:layout_marginTop="30dp"
        android:textColor="#113AEE"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bài thi hiện có"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="34dp" />
    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/imgReloadbaithi"
        android:layout_below="@+id/textView22"
        android:layout_alignParentRight="true"
        android:src="@drawable/refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"></ImageView>
    <ListView
        android:background="#ffe6e6"
        android:layout_marginTop="5dp"
        android:id="@+id/lstBaithi"
        android:layout_below="@+id/imgReloadbaithi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView27"
        android:layout_below="@+id/textView22"
        android:id="@+id/spThiChonmon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatSpinner>
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView22"
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn môn thi: " />
</RelativeLayout>