<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LichSuLamBai"
    android:background="#A3FFD500"
    >

    <TextView
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch sử làm bài" />
    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView25"
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn môn: " />
    <ListView
        android:background="#ffe6e6"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/tvHellohis"
        android:id="@+id/lstHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView25" >
    </ListView>


    <TextView
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="25sp"
        android:id="@+id/tvHellohis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView24"
        android:id="@+id/spLichsuMon"
        android:layout_below="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.AppCompatSpinner>

</RelativeLayout>