<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A3FFD500"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="19dp"
            android:text="Trang dành cho thí sinh"
            android:textColor="#113AEE"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgThi"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="64dp"
            app:srcCompat="@drawable/thi" />

        <ImageView
            android:id="@+id/imgHistory"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_below="@+id/textView4"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="64dp"
            android:layout_toEndOf="@+id/imgThi"
            android:layout_toRightOf="@+id/imgThi"
            app:srcCompat="@drawable/his"
            />

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/info"
            tools:srcCompat="@drawable/info" />

        <ImageView
            android:id="@+id/imgDangxuat"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_below="@+id/textView11"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/imgInfo"
            android:layout_toRightOf="@+id/imgInfo"
            app:srcCompat="@drawable/exit"
            tools:srcCompat="@drawable/exit" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgThi"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="13dp"
            android:text="Vào thi"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgHistory"
            android:layout_marginStart="103dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/textView10"
            android:layout_toRightOf="@+id/textView10"
            android:text="Lịch sử làm bài"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgInfo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="13dp"
            android:text="Thông tin cá nhân"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgDangxuat"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/textView12"
            android:text="Đăng xuất"
            android:textSize="18sp"></TextView>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:textSize="25sp"
            android:layout_alignParentBottom="true"
            android:textColor="#ff0000"
            android:id="@+id/tvhellots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>